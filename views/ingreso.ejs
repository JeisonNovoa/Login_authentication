<!DOCTYPE html>
<html>
<head>
	<title>Ingreso</title>
	<link rel="stylesheet" href="resources/css/style.css">
<link href="https://fonts.googleapis.com/css2?family=Jost:wght@500&display=swap" rel="stylesheet">
</head>
<body>
	<div class="logo"><img src="resources/img/logo_blanco.png" alt="Logo"></div>
	<div class="main">  	
		<input type="checkbox" id="chk" aria-hidden="true">
			<div class="signup">
				<form action="/ingreso" method="POST">
					<label for="chk" aria-hidden="true">Sign up</label>
					<input type="text" name="user" placeholder="User name" required>
					<input type="email" name="email" placeholder="Email" required aria-describedby="emailHelp">
					<input type="password" name="pass" placeholder="Password" required>
					<button type="submit" value="register" class="btn btn-primary">Sign up</button>
				</form>
			</div>
			<script src="//cdn.jsdelivr.net/npm/sweetalert2@11"></script>
			<% if(typeof alert != "undefined"){ %>
				<script>
					Swal.fire({
						title: '<%= alertTitle %>',
						text: '<%= alertMessage %>',
						icon: '<%= alertIcon %>',
						showConfirmButton: <%= showConfirmButton%>,
						timer: <%= timer %>
					}).then(()=>{
						window.location='/ <%= ruta %>'
					})
				</script>
			<% } %>
<!-- /////////////////////////////////////////////////////////////////////////////////////////////////// -->
			<div class="login">
				<form action="/auth" method="POST">
					<label for="chk" aria-hidden="true">Login</label>
					<input type="text" name="user" id="user" placeholder="User Name">
					<input type="password" name="pass" id="pass" placeholder="Password">
					<button type="submit" value="Login">Login</button>
				</form>
			</div>
			<script src="//cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <% if(typeof alert != "undefined"){ %>
        <script>
            Swal.fire({
                title: '<%= alertTitle %>',
                text: '<%= alertMessage %>',
                icon: '<%= alertIcon %>',
                showConfirmButton: <%= showConfirmButton%>,
                timer: <%= timer %>
            }).then(()=>{
                window.location='/<%= ruta %>'
            })
        </script>
    <% } %>
	</div>
	<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-OERcA2EqjJCMA+/3y+gxIOqMEjwtxJY7qPCqsdltbNJuaOe923+mo//f6V8Qbsw3" crossorigin="anonymous"></script>
</body>
</html>